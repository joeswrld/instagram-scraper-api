# ============================================
# Instagram Scraper API - Environment Configuration
# Copy this content to your .env file
# ============================================

# ===== API Configuration =====
# Comma-separated list of API keys for authentication
# Generate secure random keys for production
API_KEYS=dev-key-12345,prod-key-67890

# ===== Storage Configuration =====
# Directory where scraped data will be stored
DATA_DIR=./data

# Maximum storage size in GB (optional)
MAX_STORAGE_GB=10

# ===== Server Configuration =====
# Server host (use 0.0.0.0 to accept external connections)
HOST=0.0.0.0

# Server port
PORT=8000

# Number of worker processes (recommended: CPU cores)
WORKERS=4

# ===== Scraping Configuration =====
# Maximum URLs allowed per scraping job
MAX_URLS_PER_JOB=100

# Delay in seconds between scraping requests (respect rate limits)
SCRAPE_DELAY_SECONDS=2.0

# Maximum comments to fetch per post
MAX_COMMENTS_PER_POST=50

# Maximum recent posts to fetch per profile
MAX_POSTS_PER_PROFILE=12

# ===== Rate Limiting =====
# Maximum requests per time window
RATE_LIMIT_REQUESTS=100

# Time window in seconds (3600 = 1 hour)
RATE_LIMIT_WINDOW=3600

# ===== Logging Configuration =====
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Log file path (leave empty for console only)
LOG_FILE=scraper.log